generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDENTE
  CONCLUIDO
  CANCELADO
}

model Product {
  id              Int          @id @default(autoincrement())
  nome            String
  categoria        String
  descricao       String
  preco           Float
  quantidadeEstoque Int

  items           OrderItem[]
}

model Order {
  id        Int          @id @default(autoincrement())
  status    OrderStatus
  total     Float
  createdAt DateTime     @default(now())

  items     OrderItem[]
}

model OrderItem {
  id          Int   @id @default(autoincrement())
  quantidade  Int

  product     Product @relation(fields: [productId], references: [id])
  productId   Int

  order       Order   @relation(fields: [orderId], references: [id])
  orderId     Int
}
